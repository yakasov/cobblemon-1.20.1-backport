{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:burn_actor",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/large-flame"
			}
		},
		"events": {
			"burnHit": {
				"sound_effect": {
					"event_name": "cobblemon:status.nonvolatile.burn.actor"
				}
			}
		},
		"curves": {
			"variable.burnflicker": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 0.79, 1, 0.97, 0.88, 0.71, 0.5, 0.25, -0.05]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "90*(q.entity_radius*1.2)",
				"max_particles": 120
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "burnHit"
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "(q.entity_radius*(0.95+v.emitter_age))/math.clamp(q.entity_scale*1.1-0.1,1,2)",
				"surface_only": true,
				"direction": ["math.random(-1.5,1.5)*0.4", "math.random(1,2)", "math.random(-1.5,1.5)*0.4"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.3,0.5)"
			},
			"minecraft:particle_initial_speed": "math.random(3.75,4.75)*1",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.1*v.burnflicker+(v.particle_random_2*0.1)", "0.15*v.burnflicker+(v.particle_random_2*0.1)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 56,
					"texture_height": 10,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 10],
						"step_UV": [8, 0],
						"frames_per_second": 10,
						"max_frame": 7,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.63": "#ffffffff",
						"1.0": "#00B23000"
					}
				}
			}
		}
	}
}
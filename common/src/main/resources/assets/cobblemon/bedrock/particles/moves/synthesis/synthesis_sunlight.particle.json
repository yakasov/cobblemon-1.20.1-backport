					"texture_width": 6,
					"texture_height": 128,
					"uv": [0, 0],
					"uv_size": [6, 128]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00B7FFFC",
						"0.5": "#CCFFFFFF",
						"1.0": "#00FFFBAC"

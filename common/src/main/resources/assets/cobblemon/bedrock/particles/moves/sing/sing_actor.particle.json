{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:sing_actor",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/note"
			}
		},
		"curves": {
			"variable.songsize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 0.63, 0.9, 0.98, 1, 1, 1, 1]
			}
		},
		"events": {
			"event_sound": {
				"sound_effect": {
					"event_name": "cobblemon:move.sing.actor"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 3,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 2.75
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": "event_sound"
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, 0, -0.15],
				"direction": ["math.sin(v.emitter_age*400)*2", "math.cos(v.emitter_age*390)*2", "math.random(-15,-10)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1.75
			},
			"minecraft:particle_initial_speed": "math.random(1.31,1.325)*1.1",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 0.3, 0],
				"linear_drag_coefficient": 0.4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.15*v.songsize)+(v.particle_random_2*0.04)", "(0.24375*v.songsize)+(v.particle_random_2*0.04)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 32,
					"texture_height": 26,
					"flipbook": {
						"base_UV": [0, "math.round(v.particle_random_4)*13"],
						"size_UV": [8, 13],
						"step_UV": [8, 0],
						"frames_per_second": 6,
						"max_frame": 4,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#60A5F8FF",
						"0.5": "#CC67BCFF",
						"1.0": "#005601FF"
					}
				}
			}
		}
	}
}